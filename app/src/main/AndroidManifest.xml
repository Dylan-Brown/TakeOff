<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="takeoff.cis350.upenn.edu.takeoff">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.authentication.LogInActivity"
            android:label="@string/title_activity_log_in" />
        <activity
            android:name=".SearchInfo"
            android:label="@string/title_activity_search_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.authentication.SignUpActivity"
            android:label="@string/title_activity_sign_up" />
        <activity android:name=".ui.search.SearchPage" />
        <activity android:name=".ui.search.Dashboard" />
        <activity android:name=".flight.FlightResultActivity" />
        <activity
            android:name=".ui.results.FlightListActivity"
            android:label="Favorite " />
        <activity
            android:name=".ui.favorites.FlightInfo"
            android:label="@string/title_activity_flight_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".flight.FlightInfoActivity"
            android:label="@string/title_activity_flight_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".flight.FlightInfoView"
            android:label="@string/title_activity_flight_info_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.favorites.FilterSearch"
            android:label="@string/title_activity_filter_search"/>

        DashBoardSearchHistory
        <!--
             activity
            android:name=".ExternalFlightSearch"
            android:label="@string/title_activity_external_flight_search"
            android:theme="@style/AppTheme.NoActionBar"></
        -->

        <activity
            android:name=".ui.search.DashBoardSearchHistory"
            android:label="@string/title_activity_dash_board_search_history"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
